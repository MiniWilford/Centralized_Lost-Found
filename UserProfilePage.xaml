<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Centralized_Lost_Found.UserProfilePage">

    <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- Profile Image -->
        <Frame HeightRequest="80" WidthRequest="80" CornerRadius="40" BorderColor="Gray" HorizontalOptions="Center">
            <Image Source="profile_placeholder.png" HeightRequest="80" WidthRequest="80"/>
        </Frame>

        <Label Text="User Profile" FontSize="18" HorizontalOptions="Center"/>

        <!-- Warnings Section -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Warnings:" FontSize="14"/>
            <Frame BackgroundColor="Orange" Padding="5" CornerRadius="5">
                <Label Text="User Spam (+1)" FontSize="14" TextColor="White"/>
            </Frame>
        </HorizontalStackLayout>

        <!-- User Details Form -->
        <Label Text="Username:" FontSize="14"/>
        <Entry Placeholder="Enter username"/>

        <Label Text="Password:" FontSize="14"/>
        <Entry Placeholder="Enter password" IsPassword="True"/>

        <Label Text="New Password:" FontSize="14"/>
        <Entry Placeholder="Enter new password" IsPassword="True"/>

        <Label Text="Items Reported:" FontSize="14"/>
        <Entry Placeholder="Number of items reported" Keyboard="Numeric"/>

        <Label Text="Location:" FontSize="14"/>
        <Entry Placeholder="Enter location"/>

        <!-- Buttons -->
        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Go Back" BackgroundColor="Red" TextColor="White" WidthRequest="120"/>
            <Button Text="Submit" BackgroundColor="Green" TextColor="White" WidthRequest="120"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
